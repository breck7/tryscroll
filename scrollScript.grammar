 javascript
  compile() {
   const index = this.getIndex()
   const parent = this.getParent()
   const isStartOfList =
    index === 0 ||
    !parent
     .nodeAt(index - 1)
     .getLine()
     .startsWith("- ")
   const isEndOfList =
    parent.length === index + 1 ||
    !parent
     .nodeAt(index + 1)
     .getLine()
     .startsWith("- ")
   const { listType } = this
   return (isStartOfList ? `<${listType}>` : "") + `${super.compile()}` + (isEndOfList ? `</${listType}>` : "")
  }
